set $mod Mod4

bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exit
bindsym $mod+Shift+space floating toggle
floating_modifier $mod
bindsym $mod+g exec .config/sway/scripts/toggle-gaps.sh

bindsym $mod+t exec alacritty
bindsym $mod+b exec flatpak run one.ablaze.floorp
bindsym $mod+m exec flatpak run one.ablaze.floorp --new-window 'https://social.linux.pizza/publish'
bindsym $mod+n exec alacritty -e nvim
bindsym $mod+f exec thunar
bindsym $mod+d exec rofi -show drun
bindsym $mod+x exec ~/.config/rofi/rofi-exit.sh
bindsym $mod+q kill
bindsym $mod+Shift+p exec .config/sway/scripts/display-menu.sh
bindsym $mod+Period exec rofi -modi emoji -show emoji -kb-secondary-copy "" -kb-custom-1 Ctrl+c
bindsym $mod+Shift+o exec .config/rofi/scriptLauncher.sh
bindsym Print exec bash -c ' \
  filename=~/Pictures/Screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png && \
  grim -g "$(slurp)" "$filename" && \
  wl-copy < "$filename" && \
  notify-send "Screenshot copied to clipboard" "$filename" \
'
bindsym $mod+Shift+f fullscreen

# Brightness down
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Brightness up
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

# Volume down (decrease by 5%)
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%


# Volume up (increase by 5%)
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%

# Mute/unmute toggle
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# Resize mode notifications
set $resize_enter_notify notify-send " RESIZE MODE" "Use hjkl or arrow keys to resize" -t 1500
set $resize_exit_notify notify-send "󰜺 NORMAL MODE" "Exited resize mode" -t 1000

# Entering resize mode with notification
bindsym $mod+r exec $resize_enter_notify; mode "resize"

# Define the resize mode
mode "resize" {
    # Resize with vim keys
    bindsym h resize shrink width 10px
    bindsym l resize grow width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px

    # Resize with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Right resize grow width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px

    # Exit resize mode with notification
    bindsym Escape exec $resize_exit_notify; mode "default"
    bindsym $mod+r exec $resize_exit_notify; mode "default"
}

